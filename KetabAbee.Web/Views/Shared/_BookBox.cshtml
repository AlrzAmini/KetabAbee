@using KetabAbee.Application.Convertors
@model KetabAbee.Application.DTOs.Book.BookListViewModel
<div class="swiper-slide">
    <div class="product-card">
        <div class="product-card-top">
            <a href="" class="product-image">
                <img src="/images/Book/thumb/@Model.ImageName" alt="product image">
            </a>
            <div class="product-card-actions">
                <button class="add-to-wishlist"><i class="fas fa-heart"></i></button>
                <button class="add-to-compare"><i class="fas fa-random"></i></button>
            </div>
        </div>
        <div class="product-card-middle">
            <div class="ratings-container">
                <div class="ratings">
                    <div class="ratings-val w-65" ></div>
                </div>
            </div>
            <h6 class="product-name">
                <a href="#">
                     @Model.Name اثر @Model.Writer نشر @Model.PublisherName
                </a>
            </h6>
            <div class="product-price product-price-clone">@Model.Price.ToToman()</div>
        </div>
        <div class="product-card-bottom">
            <div class="product-price">
                @Model.Price.ToToman()
            </div>
            <a href="#" class="btn-add-to-cart">
                <i class="fad fa-cart-plus"></i>
                افزودن به سبد خرید
            </a>
        </div>
    </div>
</div>