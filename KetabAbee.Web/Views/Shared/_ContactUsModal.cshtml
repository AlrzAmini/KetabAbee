@model KetabAbee.Application.DTOs.Contact.CreateContactUsViewModel

<form id="ContactUsForm" asp-controller="Home" asp-action="ContactUs" method="post">
    <div class="modal-header">
        <h5 class="modal-title">فرم تماس با ما</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div> 
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12 mb-3">
                <label>موضوع</label>
                <input type="text" class="form-control" asp-for="Subject">
                <span asp-validation-for="Subject" class="text-danger"></span>
            </div>
            <div class="col-md-6 mb-3">
                <label>نام</label>
                <input type="text" class="form-control" asp-for="UserName">
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="col-md-6 mb-3">
                <label>ایمیل</label>
                <input type="text" class="form-control" asp-for="Email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="col-md-12">
                <label>پیام</label>
                <textarea class="form-control" rows="5" asp-for="Body"></textarea>
                <span asp-validation-for="Body" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">انصراف</button>
        <button type="submit" class="btn btn-success">ارسال</button>
    </div>
</form>