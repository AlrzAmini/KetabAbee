@{
    ViewData["Title"] = "کتاب آبی";
}
@section MetaTag
{
    <meta name="googlebot" content="index,follow" />
    <meta name="robots" content="noodp,noydir" />
    <meta name="description" content="هر آنچه که نیاز دارید با بهترین قیمت از کتاب آبی بخرید! جدیدترین انواع کتاب انگیزشی، فلسفی، توسعه فردی، رمان و داستان، کتاب کودک، آموزشی، نقاشی و... با امکان تعویض و مرجوعی آسان | ✓ارسال رايگان ✓پرداخت در محل ✓ضمانت بازگشت کالا - برای خرید کلیک کنید!" />
    <meta property=og:site_name value="کتابفروشی کتاب آبی" />
    <meta property=og:title content="کتابفروشی کتاب آبی" />
    <meta property=og:url content="https://haamechitamoom.ir/" />
    <meta property=og:image:width content="700"/>
    <meta property=og:image:type content="image/jpg" />
    <meta property=og:description content="">
    <meta property=og:price:currency content="IRR" />
    <meta property=og:locale content="ir_FA" />
}
<main class="page-content">
    <div class="container">
        @await Component.InvokeAsync("HeadBannersComponent")
        <section class="product-carousel in-box">
            <div class="section-title">
                <i class="fad fa-pen-nib text-info"></i>
                تازه ها
            </div>
            <div class="swiper-container slider-lg">
                <cache expires-after="TimeSpan.FromMinutes(5)">
                    @await Component.InvokeAsync("LatestBooksComponent")
                </cache>
                <!-- Add Arrows -->
                <div class="swiper-button-next"></div>
                <div class="swiper-button-prev"></div>
            </div>
        </section>
        <div class="row mb-5">
            <div class="col-md-3 col-6 mb-lg-0 mb-3">
                <div class="banner">
                    <a href="/Books?PageNum=1&Exist=true&Exist=false">
                        <img src="/images/banner/banner-sm-04-min.jpg" alt="کتابهای ما">
                    </a>
                </div>
            </div>
            <div class="col-md-3 col-6 mb-lg-0 mb-3">
                <div class="banner">
                    <a href="/Books?SelectedPublishers=1">
                        <img src="/images/banner/banner-sm-05-min.jpg" alt="کتابهای نشر چشمه">
                    </a>
                </div>
            </div>
            <div class="col-md-3 col-6 mb-lg-0 mb-3">
                <div class="banner">
                    <a href="/Books?SelectedPublishers=2">
                        <img src="/images/banner/banner-sm-06-min.jpg" alt="کتابهای نشر کوله پشتی">
                    </a>
                </div>
            </div>
            <div class="col-md-3  col-6 mb-lg-0 mb-3">
                <div class="banner">
                    <a href="/Books?SearchCategory=2">
                        <img src="/images/banner/banner-sm-07-min.jpg" alt="کتابهایی مخصوص نوجوانان و کودکان">
                    </a>
                </div>
            </div>
        </div>
        <div class="row mb-5">
            <div class="col-md-6 mb-lg-0 mb-3">
                <div class="banner">
                    <a href="/Books?MaxPrice=100000">
                        <img src="/images/banner/wp/banner-md-01-min.webp" alt="کتابهای کمتر از صد هزار تومان">
                    </a>
                </div>
            </div>
            <div class="col-md-6 mb-lg-0 mb-3">
                <div class="banner">
                    <a href="/Books?SearchCategory=8">
                        <img src="/images/banner/wp/banner-md-02-min.webp" alt="کتابهایی برای رشد شخصی">
                    </a>
                </div>
            </div>
        </div>
        <cache expires-after="TimeSpan.FromMinutes(15)">
            @await Component.InvokeAsync("BestSellingBooksComponent")
        </cache>
        <hr />
        <div class="row mb-3 mt-4">
            <div class="col-12 mb-4">
                <div class="section-title">
                    <i class="fad fa-blog text-primary"></i>
                    مجله آبی
                </div>
            </div>
            <cache expires-after="TimeSpan.FromMinutes(15)">
                @await Component.InvokeAsync("LatestBlogsComponent")
            </cache>
        </div>
    </div>ـ
</main>


