
@{
    ViewData["Title"] = "ثبت نام";
}

<main class="page-content">
    <div class="container">
        <div class="auth-wrapper">
            <div class="auth-form shadow-around mt-5">
                <div class="site-logo">
                    <a href="#">
                        <img src="/images/logo.png" alt="logo">
                    </a>
                </div>
                <div class="auth-form-title">
                    ثبت نام در کتاب <span class="text-primary">آبی</span>
                </div>
                <form action="#">
                    <div class="form-element-row">
                        <label for="user-name" class="label-element">نام کاربری</label>
                        <div class="form-element-with-icon">
                            <input type="text" class="input-element" id="user-name">
                            <i class="fad fa-user"></i>
                        </div>
                    </div>
                    <div class="form-element-row">
                        <label for="user-email" class="label-element">ایمیل</label>
                        <div class="form-element-with-icon">
                            <input type="email" class="input-element" id="user-email">
                            <i class="fad fa-mail-bulk"></i>
                        </div>
                    </div>
                    <div class="form-element-row">
                        <label for="password" class="label-element">کلمه عبور</label>
                        <div class="form-element-with-icon">
                            <input type="password" class="input-element" id="password">
                            <i class="fad fa-key-skeleton"></i>
                        </div>
                    </div>
                    <div class="form-element-row">
                        <label class="container-checkbox">
                            <a href="#" class="link--with-border-bottom">حریم خصوصی</a> و <a href="#" class="link--with-border-bottom">شرایط و قوانین</a> استفاده از سرویس های سایت
                            همتا را مطالعه نموده
                            و با کلیه موارد آن موافقم.
                            <input type="checkbox" checked="checked">
                            <span class="checkmark"></span>
                        </label>
                    </div>
                    <div class="form-element-row text-left">
                        <button class="btn-element btn-success-element">
                            <i class="fad fa-user-edit"></i>
                            ثبت نام در کتاب آبی
                        </button>
                    </div>

                </form>
                <div class="auth-form-footer">
                    <span>قبلا در همتا ثبت‌نام کرده‌اید؟</span>
                    <a href="/Login" class="link--with-border-bottom">وارد شوید</a>
                </div>
            </div>
        </div>
    </div>
</main>

