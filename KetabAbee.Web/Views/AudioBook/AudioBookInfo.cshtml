@using KetabAbee.Application.Extensions
@using KetabAbee.Application.Convertors
@model KetabAbee.Application.DTOs.AudioBook.ShowAudioBookInfoViewModel
@{
    ViewData["Title"] = Model.Title;
}
@section MetaTag
