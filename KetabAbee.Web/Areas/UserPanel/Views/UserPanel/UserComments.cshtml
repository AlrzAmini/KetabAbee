@using KetabAbee.Application.Convertors
@model List<KetabAbee.Application.DTOs.Comment.ShowCommentInUserPanel>
@{
    ViewData["Title"] = "دیدگاه ها";
}

<main class="page-content" style="margin-top: 207px; transform: none;">
    <div class="container" style="transform: none;">
        <div class="row mb-5" style="transform: none;">
            <div class="col-lg-3 col-md-4 mb-md-0 mb-3 sticky-sidebar" style="position: relative; overflow: visible; box-sizing: border-box; min-height: 1px;">
                <div class="theiaStickySidebar" style="padding-top: 0px; padding-bottom: 1px; position: static; transform: none; top: 0px; left: 1062.5px;">
                    <div class="sidebar-widget">
                        @await Component.InvokeAsync("UserPanelSideBarComponent")
                    </div><div class="resize-sensor" style="position: absolute; inset: 0px; overflow: hidden; z-index: -1; visibility: hidden;"><div class="resize-sensor-expand" style="position: absolute; left: 0; top: 0; right: 0; bottom: 0; overflow: hidden; z-index: -1; visibility: hidden;"><div style="position: absolute; left: 0px; top: 0px; transition: all 0s ease 0s; width: 352px; height: 1045px;"></div></div><div class="resize-sensor-shrink" style="position: absolute; left: 0; top: 0; right: 0; bottom: 0; overflow: hidden; z-index: -1; visibility: hidden;"><div style="position: absolute; left: 0; top: 0; transition: 0s; width: 200%; height: 200%"></div></div></div>
                </div>
            </div>
            <div class="col-lg-9 col-md-8">
                <div class="row mb-4">
                    <div class="col-12">
                        <div class="section-title mb-2">
                            دیدگاه های من
                        </div>
                        <section class="shadow-around p-3">
                            <div class="row">
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var comment in Model)
                                    {
                                        <div class="col-lg-6 mb-4">
                                            <div class="shadow-around p-3">
                                                <div class="d-flex align-items-center justify-content-between mb-3">
                                                    <span class="font-weight-bold">@comment.UserName</span>
                                                </div>
                                                <div class="d-flex">
                                                    <p class="text-sm text-muted mb-3">
                                                        @comment.Body
                                                    </p>
                                                </div>
                                                <div class="d-flex align-items-center justify-content-between">
                                                    <cite class="text-sm">در تاریخ @comment.SendDate.ToIraniDate()</cite>
                                                    <a asp-controller="Book" asp-action="RemoveComment" asp-route-commentId="@comment.Id" class="btn btn-light btn-sm">
                                                        حذف
                                                        <i class="far fa-trash-alt mr-2"></i>
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }
                            </div>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

