@model List<KetabAbee.Application.DTOs.Book.BookListViewModel>
@{
    ViewData["Title"] = "محصولات خریداری شده";
}


<main class="page-content mt-207 none-transform">
    <div class="container none-transform">
        <div class="row mb-5 none-transform">
            <partial name="_UserPanelSideBar_Col3_207px" />
            <div class="col-lg-9 col-md-8">
                <div class="section-title mb-2">
                    محصولات خریداری شده شما
                </div>
                <div class="checkout-section shadow-around">
                    <div class="checkout-section-content">
                        <div class="row mx-0">
                            @if (Model != null && Model.Any())
                            {
                                foreach (var book in Model)
                                {
                                    <div class="col-xl-3 col-lg-4 col-sm-6 mb-3">
                                        <div class="custom-control custom-radio">
                                            <label class="custom-control-label address-select">
                                                <span class="head-address-select">@book.Name اثر @book.Writer</span>
                                                <span>
                                                    <a asp-controller="Book" asp-action="BookInfo" asp-route-bookId="@book.BookId">
                                                        <img src="/images/Book/thumb/@book.ImageName" class="thumbnail rounded img-fluid" alt="@book.Name" />
                                                    </a>
                                                </span>
                                            </label>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="col-md-12">
                                    <div class="alert alert-info">هنوز محصولی خریداری نکرده اید</div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>