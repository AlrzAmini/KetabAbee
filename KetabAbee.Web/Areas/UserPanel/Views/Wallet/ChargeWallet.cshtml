@using KetabAbee.Application.Convertors
@using KetabAbee.Application.DTOs.Wallet
@using KetabAbee.Application.Extensions
@using KetabAbee.Domain.Models.Wallet
@model KetabAbee.Application.DTOs.Wallet.WalletsWithPagingViewModel
@{
    ViewData["Title"] = "کیف پول";
}
<main class="page-content" style="margin-top: 205.5px; transform: none;">
    <div class="container" style="transform: none;">
        <div class="row mb-5" style="transform: none;">
            <div class="col-lg-3 col-md-4 mb-md-0 mb-3 sticky-sidebar" style="position: relative; overflow: visible; box-sizing: border-box; min-height: 1px;">

                <div class="theiaStickySidebar" style="padding-top: 0px; padding-bottom: 1px; position: static; transform: none;">
                    <div class="sidebar-widget">
                        @await Component.InvokeAsync("UserPanelSideBarComponent")
                    </div><div class="resize-sensor" style="position: absolute; inset: 0px; overflow: hidden; z-index: -1; visibility: hidden;"><div class="resize-sensor-expand" style="position: absolute; left: 0; top: 0; right: 0; bottom: 0; overflow: hidden; z-index: -1; visibility: hidden;"><div style="position: absolute; left: 0px; top: 0px; transition: all 0s ease 0s; width: 322px; height: 599px;"></div></div><div class="resize-sensor-shrink" style="position: absolute; left: 0; top: 0; right: 0; bottom: 0; overflow: hidden; z-index: -1; visibility: hidden;"><div style="position: absolute; left: 0; top: 0; transition: 0s; width: 200%; height: 200%"></div></div></div>
                </div>
            </div>
            <div class="col-lg-9 col-md-8">
                <div class="row mb-4">
                    <div class="col-12">
                        <div class="section-title mb-2">
                            @ViewData["Title"]
                        </div>
                        <section class="shadow-around p-3">
                            <form asp-controller="Wallet" asp-action="ChargeWallet" method="post">
                                <div class="row">
                                    <div class="col-lg-12 mb-5">
                                        <div class="text-sm text-muted mb-3">مبلغ (تومان) :</div>
                                        <div class="text-dark font-weight-bold">
                                            <div class="form-element-row mb-0">
                                                <input type="number" asp-for="Amount" value="" class="input-element" placeholder="مبلغی مورد نظر خود را به تومان وارد کنید ...">
                                            </div>
                                            <span asp-validation-for="Amount" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-lg-12 mb-5">
                                        <div class="text-sm text-muted mb-3">بابت :</div>
                                        <div class="text-dark font-weight-bold">
                                            <div class="form-element-row mb-0">
                                                <input type="text" asp-for="Behalf" class="input-element" value="شارژ حساب">
                                            </div>
                                            <span asp-validation-for="Behalf" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-element-row text-left">
                                            <button class="btn-element btn-success-element" onclick="return confirm('از شارژ حساب خود مطمعن هستید ؟')">
                                                <i class="fad fa-money-check"></i>
                                                شارژ
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </section>
                    </div>
                </div>
                <form id="filterform" asp-area="UserPanel" asp-controller="Wallet" asp-action="ChargeWallet" method="get">
                    <input type="hidden" asp-for="PageNum" />
                </form>
                <div class="col-lg-12 col-md-12">
                    <div class="row mb-4">
                        <div class="col-12">
                            <div class="section-title mb-2">
                                تراکنش های شما
                            </div>
                            <section class="shadow-around p-3">
                                <div class="tab-content" id="orders-tab">
                                    <div class="tab-pane fade active show" id="wait-for-payment" role="tabpanel" aria-labelledby="wait-for-payment-tab">
                                        <section class="table--order shadow-around mt-4">
                                            <div class="table-responsive">
                                                <table class="table">
                                                    <thead>
                                                        <tr>
                                                            <th>شماره تراکنش</th>
                                                            <th>تاریخ ثبت</th>
                                                            <th>مبلغ کل</th>
                                                            <th>نوع</th>
                                                            <th>شرح</th>
                                                            <th>پرداخت</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>

                                                        @if (Model.Wallets.Any())
                                                        {
                                                            foreach (var item in Model.Wallets.OrderByDescending(w => w.Amount))
                                                            {
                                                                <tr>
                                                                    <td>KTA - @item.WalletId</td>
                                                                    <td>@item.CreateDate.ToIraniDate() ساعت @item.CreateDate.GetHourAndMinutes()</td>
                                                                    <td>@item.Amount.ToTooman()</td>
                                                                    @if (item.WalletType == WalletType.Deposit)
                                                                    {
                                                                        <td><p class="badge-success rounded m-1">@item.WalletType.GetEnumName()</p></td>
                                                                    }
                                                                    else
                                                                    {
                                                                        <td><p class="badge-danger rounded m-1">@item.WalletType.GetEnumName()</p></td>
                                                                    }
                                                                    <td>@item.Behalf</td>
                                                                    @if (item.IsPay)
                                                                    {
                                                                        <td class="text-success">موفق</td>
                                                                    }
                                                                    else
                                                                    {
                                                                        <td class="text-danger">نا موفق</td>
                                                                    }
                                                                </tr>
                                                            }
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                            <partial name="_UserPanelPaging" model="Model.GetCurrentPaging()" />
                                        </section>
                                    </div>
                                </div>
                            </section>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <partial name="_Banner" />
    </div>
</main>

@section Scripts
{
    <partial name="_ValidationScriptsPartial"/>
}
