@using KetabAbee.Application.Convertors
@using KetabAbee.Application.Extensions
@model KetabAbee.Application.DTOs.Admin.User.UserInfoViewModel
@{
    ViewData["Title"] = "جزییات کاربر " + Model.UserName;
}
<div class="row col-md-12 margin-bottom-10 h-100 align-items-center">
    <div class="col-md-2">
        <a class="btn btn-info btn-block" asp-controller="AdminUser" asp-action="SendActiveEmail" asp-route-userId="@Model.UserId"> ارسال ایمیل کد تایید <i class="fa fa-envelope-o"></i></a>
    </div>
    <div class="col-md-2">
        <a class="btn btn-success btn-block" asp-controller="AdminUser" asp-action="SendActiveMessage" asp-route-userId="@Model.UserId">ارسال پیامک کد تایید <i class="fa fa-paper-plane-o"></i></a>
    </div>
    <div class="col-md-2">
        <a class="btn btn-warning btn-block" asp-controller="AdminUser" asp-action="DeleteUserComments" asp-route-userId="@Model.UserId" onclick="return confirm('از حذف نظرات این کاربر مطمعن هستید ؟')"> حذف نظرات کاربر <i class="fa fa-comment"></i></a>
    </div>
    @if (!Model.IsBanned)
    {
        <div class="col-md-2">
            <a class="btn btn-darkorange btn-block" asp-controller="AdminUser" asp-action="BanUser" asp-route-userId="@Model.UserId" onclick="return confirm('کاربر مسدود شود ؟')">مسدود کردن <i class="fa fa-ban"></i></a>
        </div>
    }
    else
    {
        <div class="col-md-2">
            <a class="btn btn-palegreen btn-block" asp-controller="AdminUser" asp-action="FreeUser" asp-route-userId="@Model.UserId" onclick="return confirm('کاربر آزاد شود ؟')">آزاد کردن <i class="fa fa-check"></i></a>
        </div>
    }
    <div class="col-md-1">
        <a class="btn btn-magenta btn-block" asp-controller="AdminUser" asp-action="EditUser" asp-route-id="@Model.UserId"> ویرایش <i class="fa fa-edit"></i></a>
    </div>
    <div class="col-md-1">
        <a class="btn btn-maroon btn-block" asp-controller="AdminUser" asp-action="ChargeWallet" asp-route-userId="@Model.UserId"> کیف پول <i class="fa fa-money"></i></a>
    </div>
    <div class="col-md-1">
        <a class="btn btn-danger btn-block" asp-controller="AdminUser" asp-action="DeleteUserInInfo" asp-route-userId="@Model.UserId" onclick="return confirm('از حذف این کاربر مطمعن هستید ؟')">حذف <i class="fa fa-remove"></i></a>
    </div>
    <div class="col-md-1">
        <a class="btn cross_line btn-block" asp-controller="AdminUser" asp-action="Index">بازگشت</a>
    </div>
</div>
<div class="row">
    <div class="col-lg-12 col-sm-12 col-xs-12">
        <h5 class="row-title before-magenta"><i class="fa fa-user magenta"></i>@ViewData["Title"]</h5>
        <br />
        <div class="row col-md-12 margin-bottom-10">
            <div class="col-md-2">
            </div>
            <div class="col-md-1">
                <a class="button-67" asp-controller="AdminUser" asp-action="UserIps" asp-route-userId="@Model.UserId">آی پی ها</a>
            </div>
            <div class="col-md-1">
                <a class="button-67" asp-controller="AdminUser" asp-action="UserScores" asp-route-userId="@Model.UserId">امتیاز ها</a>
            </div>
            <div class="col-md-1">
                <a class="button-67" asp-controller="AdminUser" asp-action="UserFavoriteBooks" asp-route-userId="@Model.UserId">علاقه ها</a>
            </div>
            <div class="col-md-1">
                <a class="button-67" asp-controller="AdminUser" asp-action="UserOrders" asp-route-userId="@Model.UserId">سفارشات</a>
            </div>
            <div class="col-md-1">
                <a class="button-67" asp-controller="AdminUser" asp-action="UserComments" asp-route-userId="@Model.UserId">دیدگاه ها</a>
            </div>
            <div class="col-md-1">
                <a class="button-67" asp-controller="AdminUser" asp-action="UserProducts" asp-route-userId="@Model.UserId">محصولات</a>
            </div>
            <div class="col-md-1">
                <a class="button-67" asp-controller="AdminUser" asp-action="UserTickets" asp-route-userId="@Model.UserId">تیکت ها</a>
            </div>
            <div class="">
                <a class="button-67" asp-controller="AdminUser" asp-action="UserWallets" asp-route-userId="@Model.UserId">تراکنش ها</a>
            </div>
            <div class="col-md-1">
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 col-sm-6 col-xs-12">
                <div class="widget flat radius-bordered">
                    <div class="widget-header bg-magenta margin-bottom-20">
                        <span class="widget-caption">مشخصات کاربر</span>
                    </div>
                    <div>
                        <div class="row">
                            <div class="col-lg-3 col-sm-6 col-xs-12">
                                <div class="widget">
                                    <div class="widget-header bordered-left bordered-blueberry">
                                        <span class="widget-caption">نام کاربری :</span>
                                    </div>
                                    <div class="widget-body bordered-left bordered-blue">
                                        <p>@Model.UserName</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-3 col-sm-6 col-xs-12">
                                <div class="widget">
                                    <div class="widget-header bordered-left bordered-blueberry">
                                        <span class="widget-caption">آی دی :</span>
                                    </div>
                                    <div class="widget-body bordered-left bordered-blue">
                                        <p>@Model.UserId</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-3 col-sm-6 col-xs-12">
                                <div class="widget">
                                    <div class="widget-header bordered-left bordered-blueberry">
                                        <span class="widget-caption">آی پی :</span>
                                    </div>
                                    <div class="widget-body bordered-left bordered-blue">
                                        <p>@Model.LatestUserIp</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-3 col-sm-6 col-xs-12">
                                <div class="widget">
                                    <div class="widget-header bordered-left bordered-blueberry">
                                        <span class="widget-caption">وضعیت :</span>
                                    </div>
                                    <div class="widget-body bordered-left bordered-blue">
                                        <p class="@(Model.IsBanned ? "text-danger":"text-success")">@(Model.IsBanned ? "مسدود":"آزاد")</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-4 col-sm-6 col-xs-12">
                                <div class="widget">
                                    <div class="widget-header bordered-left bordered-green">
                                        <span class="widget-caption">ایمیل :</span>
                                    </div>
                                    <div class="widget-body bordered-left bordered-palegreen">
                                        <p>@Model.Email</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4 col-sm-6 col-xs-12">
                                <div class="widget">
                                    <div class="widget-header bordered-left bordered-green">
                                        <span class="widget-caption">کد فعالسازی ایمیل :</span>
                                    </div>
                                    <div class="widget-body bordered-left bordered-palegreen">
                                        <p>@Model.EmailActivationCode</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4 col-sm-6 col-xs-12">
                                <div class="widget">
                                    <div class="widget-header bordered-left bordered-green">
                                        <span class="widget-caption">وضعیت فعالسازی ایمیل :</span>
                                    </div>
                                    <div class="widget-body bordered-left bordered-palegreen">
                                        <p class="@(Model.IsEmailActive ? "text-success":"text-danger")">@(Model.IsEmailActive ? "فعال":"غیر فعال")</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-4 col-sm-6 col-xs-12">
                                <div class="widget">
                                    <div class="widget-header bordered-left bordered-danger">
                                        <span class="widget-caption">موبایل :</span>
                                    </div>
                                    <div class="widget-body bordered-left bordered-orange">
                                        <p>@Model.Mobile</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4 col-sm-6 col-xs-12">
                                <div class="widget">
                                    <div class="widget-header bordered-left bordered-danger">
                                        <span class="widget-caption">کد فعالسازی موبایل :</span>
                                    </div>
                                    <div class="widget-body bordered-left bordered-orange">
                                        <p>@Model.MobileActivationCode</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4 col-sm-6 col-xs-12">
                                <div class="widget">
                                    <div class="widget-header bordered-left bordered-danger">
                                        <span class="widget-caption">وضعیت فعالسازی موبایل :</span>
                                    </div>
                                    <div class="widget-body bordered-left bordered-orange">
                                        <p class="@(Model.IsMobileActive ? "text-success":"text-danger")">@(Model.IsMobileActive ? "فعال":"غیر فعال")</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-4 col-sm-6 col-xs-12">
                                <div class="widget">
                                    <div class="widget-header bordered-left bordered-maroon">
                                        <span class="widget-caption">آدرس :</span>
                                    </div>
                                    <div class="widget-body bordered-left bordered-magenta">
                                        <p>@Model.Address</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4 col-sm-6 col-xs-12">
                                <div class="widget">
                                    <div class="widget-header bordered-left bordered-maroon">
                                        <span class="widget-caption">تاریخ تولد :</span>
                                    </div>
                                    <div class="widget-body bordered-left bordered-magenta">
                                        <p>@Model.BirthDay?.ToShamsi()</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4 col-sm-6 col-xs-12">
                                <div class="widget">
                                    <div class="widget-header bordered-left bordered-maroon">
                                        <span class="widget-caption">سن :</span>
                                    </div>
                                    <div class="widget-body bordered-left bordered-magenta">
                                        <p>@Model?.Age</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-4 col-sm-6 col-xs-12">
                                <div class="widget">
                                    <div class="widget-header bordered-left bordered-blue">
                                        <span class="widget-caption">تاریخ ثبت نام :</span>
                                    </div>
                                    <div class="widget-body bordered-left bordered-azure">
                                        <p>@Model.RegisterDate.ToShamsi()</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4 col-sm-6 col-xs-12">
                                <div class="widget">
                                    <div class="widget-header bordered-left bordered-blue">
                                        <span class="widget-caption">موجودی کیف پول :</span>
                                    </div>
                                    <div class="widget-body bordered-left bordered-azure">
                                        <p>@Model.WalletBalance.ToTooman()</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4 col-sm-6 col-xs-12">
                                <div class="widget">
                                    <div class="widget-header bordered-left bordered-blue">
                                        <span class="widget-caption">تصویر پروفایل :</span>
                                    </div>
                                    <div class="widget-body bordered-left bordered-azure">
                                        <img class="img-fluid img-thumbnail max-width100 rounded" alt="profile" src="/Avatar/@Model.AvatarName" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

