@model KetabAbee.Application.DTOs.Paging.BasePaging

<ul class="pagination margin-10">
    @if (Model.StartPage < Model.PageNum)
    {
        <li class="cursor-pointer"><a onclick="FillPageNum(@(Model.PageNum-1))">«</a></li>
    }
    @for (var i = Model.StartPage; i <= Model.EndPage; i++)
    {
        <li class="@(Model.PageNum == i ? "active" : "") cursor-pointer"><a onclick="FillPageNum(@i)">@i <span class="sr-only">(current)</span></a></li>
    }
    @if (Model.EndPage > Model.PageNum)
    {
        <li class="cursor-pointer"><a onclick="FillPageNum(@(Model.PageNum+1))">»</a></li>
    }
</ul>