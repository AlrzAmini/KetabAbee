@model KetabAbee.Application.DTOs.Admin.AudioBook.AudioBookRequestsViewModel
@{
    ViewData["Title"] = "درخواست های کتاب صوتی";
}

<!-- Page Breadcrumb -->
<div class="page-breadcrumbs margin-bottom-20">
    <ul class="breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a asp-controller="AdminHome" asp-action="Home">خانه</a>
        </li>
        <li class="active">@ViewData["Title"]</li>
    </ul>
</div>
<!-- /Page Breadcrumb -->
<div class="col-xs-12 col-md-12">
    <div class="well with-header with-footer">
        <div class="header bordered-pink">
            @ViewData["Title"]
        </div>
        <form id="filterform" asp-controller="AdminContactUs" asp-action="Index" method="get">
            <input type="hidden" asp-for="PageNum" />
        </form>
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>
                       عنوان کتاب
                    </th>
                    <th>
                        فرستنده
                    </th>
                    <th>
                        آی پی
                    </th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Requests != null && Model.Requests.Any())
                {
                    foreach (var req in Model.Requests)
                    {
                        <tr>
                            <td>
                                @req.BookTitle
                            </td>
                            <td>
                                @req.UserName
                            </td>
                            <td>
                                @req.UserIp
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
        <partial name="_AdminPaging" model="@Model.GetCurrentPaging()" />
    </div>
</div>
