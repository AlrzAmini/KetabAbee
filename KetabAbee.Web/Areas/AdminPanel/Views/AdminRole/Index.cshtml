@model List<KetabAbee.Domain.Models.User.Role>
@{
    ViewData["Title"] = "نقش ها";
}



    <!-- Page Breadcrumb -->
    <div class="page-breadcrumbs margin-bottom-20">
        <ul class="breadcrumb">
            <li>
                <i class="fa fa-home"></i>
                <a asp-controller="AdminHome" asp-action="Home">خانه</a>
            </li>
            <li class="active">@ViewData["Title"]</li>
        </ul>
    </div>
    <!-- /Page Breadcrumb -->
    <div class="col-12 col-md-12 row margin-bottom-10">
        <a asp-controller="AdminUser" asp-action="AddUser" class="btn btn-success col-md-4">افزودن نقش جدید <i class="glyphicon glyphicon-plus"></i> </a>
    </div>
    <div class="col-xs-12 col-md-6">
        <div class="well with-header with-footer">
            <div class="header bordered-pink">
               @ViewData["Title"]
            </div>
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>
                             شماره
                        </th>
                        <th class="hidden-xs">
                            عنوان
                        </th>
                        <th>
                             دستورات
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var role in Model)
                        {
                            <tr>
                                <td>
                                    @role.RoleId
                                </td>
                                <td>
                                    @role.RoleTitle
                                </td>
                                <td>
                                    <a href="#" class="btn btn-info btn-sm"><i class="fa fa-edit"></i> ویرایش</a>
                                    <a href="#" class="btn btn-danger btn-sm"><i class="fa fa-remove"></i> حذف</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

