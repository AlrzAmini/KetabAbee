@model KetabAbee.Application.DTOs.Admin.Exam.CreateQuestionViewModel
@{
    ViewData["Title"] = "افزودن سوال برای آزمون " + Model.ExamId + " مربوط به کتاب " + Model.BookName;
}
@section Scripts
{
    <partial name="_ValidationScriptsPartial"/>
}
<div class="page-breadcrumbs margin-bottom-20">
    <ul class="breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a asp-controller="AdminHome" asp-action="Home">خانه</a>
        </li>
        <li>
            <a asp-controller="Exam" asp-action="Index">آزمون ها</a>
        </li>
        <li>
            <a asp-controller="Exam" asp-action="ExamDetails" asp-route-examId="@Model.ExamId">آزمون @Model.ExamId</a>
        </li>
        <li class="active">@ViewData["Title"]</li>
    </ul>
</div>
<div class="col-lg-12 col-sm-6 col-xs-12">
    <div class="widget flat radius-bordered">
        <div class="widget-header bg-info">
            <span class="widget-caption">افزودن سوال</span>
        </div>
        <div class="widget-body">
            <div id="registration-form">
                <div class="form-title">
                    @ViewData["Title"]
                </div>
                <div class="row">
                    <form asp-controller="Exam" asp-action="CreateQuestion" method="post">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>متن سوال:</label>
                                <span class="input-icon icon-right">
                                    <textarea class="form-control" rows="9" asp-for="Question"></textarea>
                                    <i class="glyphicon glyphicon-question-sign blue"></i>
                                </span>
                                <span asp-validation-for="Question" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>پاسخ اول:</label>
                                    <span class="input-icon icon-right">
                                        <textarea class="form-control" rows="3" asp-for="QAnswer1"></textarea>
                                        <i class="glyphicon glyphicon-question-sign blue"></i>
                                    </span>
                                    <span asp-validation-for="QAnswer1" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>پاسخ دوم:</label>
                                    <span class="input-icon icon-right">
                                        <textarea class="form-control" rows="3" asp-for="QAnswer2"></textarea>
                                        <i class="glyphicon glyphicon-question-sign blue"></i>
                                    </span>
                                    <span asp-validation-for="QAnswer2" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>پاسخ سوم:</label>
                                    <span class="input-icon icon-right">
                                        <textarea class="form-control" rows="3" asp-for="QAnswer3"></textarea>
                                        <i class="glyphicon glyphicon-question-sign blue"></i>
                                    </span>
                                    <span asp-validation-for="QAnswer3" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>پاسخ چهارم:</label>
                                    <span class="input-icon icon-right">
                                        <textarea class="form-control" rows="3" asp-for="QAnswer4"></textarea>
                                        <i class="glyphicon glyphicon-question-sign blue"></i>
                                    </span>
                                    <span asp-validation-for="QAnswer3" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <button type="submit" class="btn btn-success"><i class="glyphicon glyphicon-plus"></i></button>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>




